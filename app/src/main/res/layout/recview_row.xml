<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repo_avatar"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/repoName"
        android:layout_width="205dp"
        android:layout_height="90dp"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/gitRepoImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gitRepoImg"
        app:layout_constraintTop_toTopOf="@+id/gitRepoImg"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/git_repo_txt"
        android:layout_width="147dp"
        android:layout_height="24dp"
        android:layout_marginStart="44dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/label_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/label_star"
        app:layout_constraintTop_toTopOf="@+id/label_star"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/label_star"
        android:layout_width="140dp"
        android:layout_height="24dp"
        android:layout_marginTop="184dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gitRepoImg"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Star Count" />

    <ImageView
        android:id="@+id/gitRepoImg"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/label_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>